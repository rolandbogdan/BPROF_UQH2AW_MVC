<Window x:Class="WpfClient.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClient"
        mc:Ignorable="d"
        Title="PasswordWindow" Height="325" Width="425">
    <StackPanel>
        <Label Content="Username" Background="Beige" Margin="20" Width="300"/>
        <TextBox x:Name="tb_username" Width="300" />
        <Label Content="Password" Background="Beige" Margin="20" Width="300"/>
        <PasswordBox x:Name="tb_pass" Width="300"/>
        <Button Content="Register" Margin="20" Click="Register_Button_click" Width="100"/>
        <Button Content="Login" Click="Login_Button_Click" Width="100"/>
    </StackPanel>
</Window>

<Window x:Class="WpfClient.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClient"
        mc:Ignorable="d"
        Title="PasswordWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="Username" Background="Beige" Margin="20"/>
        <TextBox x:Name="tb_username" />
        <Label Content="Password" Background="Beige" Margin="20"/>
        <PasswordBox x:Name="tb_pass"/>
        <Button Content="Login" Margin="20" Click="Button_Click"/>
    </StackPanel>
</Window>

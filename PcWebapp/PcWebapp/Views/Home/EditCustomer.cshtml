@model Models.Customer
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>Generic PC store</title>
    <link rel="stylesheet" href="~/main.css" />
</head>
<body>
    <div class="container">
        <header>
            <a href="/Home/Index">
                <h4 class="mainMenuButton">Főmenü</h4>
            </a>
            <nav>
                <ul>
                    <li><a href="/Home/AdminIndex">Admin mód</a></li>
                    <li><a href="/Home/UserIndex">User mód</a></li>
                    <li><a href="/Home/GenerateData">Minta adatok betöltése</a></li>
                </ul>
            </nav>
        </header>
        <div class="mainText">
            <h1>Vásárlók szerkesztése</h1>
            <form action="/Home/EditCustomer" method="post">
                <input type="hidden" name="customerID" value="@Model.CustomerID" />
                Teljes név:: <br />
                <input type="text" name="CustomerName" value="@Model.CustomerName" /> <br />
                Email cím: <br />
                <input type="email" name="EmailAddress" value="@Model.EmailAddress" /> <br />
                Telefonszám: <br />
                <input type="text" name="PhoneNumber" value="@Model.PhoneNumber" placeholder="+36 30 123 4567" /> <br />
                Cím: <br />
                <input type="text" name="Address" value="@Model.Address" /> <br />
                Jelszó: <br />
                <input type="password" name="Password" value="@Model.Password" /> <br />
                <input type="submit" value="Vásárló szerkesztése" />
            </form>
        </div>
    </div>
</body>
</html>
